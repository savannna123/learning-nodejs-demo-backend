{
//ts编译器配置文件

/*
  指定需要编译的文件
  其中，**表示任意目录  *表示任意文件
 */
  "include": [
    "./src/**/*"
  ],
/*
  不需要编译的文件
  有默认值["node_modules", "bower_components", "jspm_packages"]
 */
  "exclude": [
    "./learning/**/*"
  ],
  //继承配置文件
//  "extends": [],
  //类似include
//  "files": [
//    "app.ts"
//  ],
  //如何编译
  "compilerOptions": {
    //指定被编译成的版本
    "target": "ESNext",
    //模块化的规范
    "module": "ESNext",
    //项目中要用的库
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    //指定编译后的文件目录（原本是在同一个地方）
    "outDir": "./dist",
    //编译的文件合成一个
//    "outFile": ""
    //是否编译js文件
    "allowJs": true,
    //检查js语法
    "checkJs": true,
    "removeComments": true,
    //执行编译过程，不生成编译文件
    "noEmit": false,
    //严格编译总开关
    "strict": true,
    /*
    //当有错误时不编译
    "noEmitOnError": true,
    //编译后的js使用严格模式，文件最上面会有 "use strict";
    //当用模块代码（import export）后，自动进入严格模式
    "alwaysStrict": true,
    //不允许隐式any
    "noImplicitAny": true,
    //不允许不明确类型的this
    "noImplicitThis": true,
    //检查变量为null
    "strictNullChecks": true
    */

  }
}
